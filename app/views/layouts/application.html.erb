<%= render :partial => 'layouts/doctype' %>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
	<head>
		<title>Madison Brass Band - <%= controller_name.titleize -%></title>
		
		<!-- Google lets us load javascript quickly from their wicked-fast CDN. -->
		<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.4/jquery.min.js"></script>
		<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.0/jquery-ui.min.js"></script>
		
		<%= css_auto_include_tags %>
		<%= javascript_include_tag :defaults %>
		<%= javascript_auto_include_tags %>
	</head>
	
	<body>
		<%= render :partial => 'layouts/application/header' %>
		<% if logged_in? -%>
			<%= render :partial => 'layouts/application/member_bar' %>
		<% end -%>
		<%= render :partial => 'layouts/application/notices' %>
		<div class="container">
			<%= yield %>
		</div>
		<%= render :partial => 'layouts/application/footer' %>
		<%= render :partial => 'layouts/application/google_analytics' %>
	</body>
</html>