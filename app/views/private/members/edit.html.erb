<h1>Edit Your Profile</h1>

<% form_for [:private, @member], :html => { :multipart => true, :method => :put } do |f| %>
	<%= f.error_messages %>

	<p>
		<%= f.label :name %><br/>
		<%= f.text_field :name %>
	</p>

	<p>
		<%= f.label :email, 'E-Mail' %><br/>
		<%= f.text_field :email %>
	</p>

	<p>
		<%= f.label :section_id, 'Section' %><br/>
		<%= f.select :section_id, Section.all.collect {|s| [s.instrument, s.id] } %>
	</p>
	
	<p>
		<%= f.label :biography %><br />
		<%= f.text_area :biography %>
	</p>
	
	<p>
		<%= f.label :photo_file_name, 'Photo' %><br />
		<%= f.file_field :photo_file_name %>
	</p>

	<p>
		<%= f.submit "Save" %>
	</p>
<% end %>

<%= link_to 'Back to Profile', @member %> |
<%= link_to 'Back', members_path %>
