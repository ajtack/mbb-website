<h1>Create a new Band Member</h1>
<% @member.password = @member.password_confirmation = nil %>

<%= error_messages_for :member %>
<% form_for @member do |f| -%>
<p><%= label_tag 'name' %><br/>
<%= f.text_field :name %></p>

<p><%= label_tag 'email' %><br/>
<%= f.text_field :email %></p>

<p><%= label_tag 'phone_number' %><br />
<%= f.text_field :phone_number %></p>

<p><%= label_tag 'section_id', 'Section' %><br/>
<%= f.select 'section_id', Section.all.collect {|s| [s.name, s.id] } %></p>

<p><%= submit_tag 'Create Member' %></p>
<% end -%>
