<div id="FlashyMenu">
	<ul class="menu">
		<hr />
		<li>
		<% unless Concert.next.nil? -%>
			<a href="<%= next_concerts_path -%>">
				<div class="box">
					<h1>Our Next Concert</h1>
					<%= next_concert_image %>
					<h2>
						<%= Concert.next.date.strftime('%B %d, %Y') -%><br />
						<%= Concert.next.location -%>
					</h2>
				</div>
			</a>
		<% else -%>
			<div class="box">
				<h1>Our Next Concert</h1>
				<%= next_concert_image %>
				<h2>
					No Upcoming Concerts<br />
					<%= link_to 'Book Us for a Performance', book_path %>
				</h2>
			</div>
		<% end -%>
		</li>

		<li>
			<a href="<%= join_path -%>">
				<div class="box">
					<h1>Join the Band</h1>
					<%= image_tag 'tuba_and_percussion.jpg', :class => 'thumbnail',
					    :alt => 'An E-flat bass and a tenor horn playing by the percussion.' %>
					<h2>We always need<br />good musicians!</h2>
				</div>
			</a>
		</li>

		<li>
			<a href="<%= book_path -%>">
				<div class="box">
					<h1>Book Our Group</h1>
					<%= image_tag 'santa_hats.jpg', :class => 'thumbnail',
					    :alt => 'Band Members in Santa Hats, looking up at the camera.' %>
					<h2>We want to play<br />at your event!</h2>
				</div>
			</a>
		</li>
		<div class="spacer"></div>
		<hr />
	</ul>
</div>