<h1>Log In</h1>

<div id="LoginForm">
	<% form_for @user_session, :url => user_session_path do |f| -%>
		<%= f.error_messages %>
	
		<p>
			<%= f.label :email, 'E-Mail' %>
			<%= f.text_field :email %>
		</p>
	
		<p>
			<%= f.label :password %>
			<%= f.password_field :password %>
		</p>
	
		<p><%= submit_tag 'Log In' -%></p>
	<% end -%>
</div>
